<?xml version="1.0" encoding="utf-8"?>
<com.razo.biosecuritychecklist.DisallowInterceptView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools">


    <LinearLayout
        android:id="@+id/root"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/back"
                android:layout_marginEnd="10dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:backgroundTint="@color/error"
                android:layout_width="15dp"
                android:layout_marginTop="10dp"
                android:layout_height="15dp"
                android:background="@drawable/close"
                android:contentDescription="@string/todo" />


            <TextView
                android:visibility="gone"
                android:textColorHighlight="#3F51B5"
                android:textColorLink="#2196F3"
                android:id="@+id/titlesub_menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="-1dp"
                android:layout_marginTop="36dp"
                android:fontFamily="@font/archivo_bold"
                android:paddingStart="3dp"
                tools:text="sasasasasasasasasasas"
                android:textSize="14sp"
                tools:ignore="HardcodedText" />


            <moe.feng.common.view.breadcrumbs.BreadcrumbsView
                android:layout_alignParentTop="true"
                android:layout_marginStart="-1dp"
                android:layout_marginTop="25dp"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:id="@+id/breadcrumbview"
                />


            <View
                android:id="@+id/div"
                android:layout_width="match_parent"
                android:layout_height="0.1pt"
                android:layout_below="@+id/breadcrumbview"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:background="#A5A5A5" />


            <androidx.recyclerview.widget.RecyclerView
                tools:visibility="gone"
                android:layout_marginTop="10dp"
                android:id="@+id/datalist"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/div"
                tools:itemCount="4"
                tools:listitem="@layout/item_sub_bsuiness" />



            <!--      SwineCompanyFarm          -->

            <LinearLayout
                tools:visibility="visible"
                android:visibility="gone"
                android:layout_below="@+id/div"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/farmList">

                <EditText
                    android:singleLine="true"
                    android:drawableTint="#787474"
                    android:drawablePadding="5dp"
                    android:paddingLeft="10dp"
                    android:drawableLeft="@drawable/search"
                    android:textSize="15dp"
                    android:hint="Search Farm Name | Org Code"
                    android:backgroundTint="@color/odd"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="@drawable/rounded"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_marginTop="10dp"
                    android:id="@+id/swineCompany"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/div"
                    app:spanCount="2"
                    android:layout_marginBottom="50dp"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    tools:listitem="@layout/item_farmlist" />



            </LinearLayout>

            <LinearLayout
                tools:visibility="gone"
                android:visibility="gone"
                android:layout_below="@+id/div"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/farmList_sub">

                <EditText
                    android:singleLine="true"
                    android:drawableTint="#787474"
                    android:drawablePadding="5dp"
                    android:paddingLeft="10dp"
                    android:drawableLeft="@drawable/search"
                    android:textSize="15dp"
                    android:hint="Search Farm Name | Org Code"
                    android:backgroundTint="@color/odd"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="@drawable/rounded"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_marginTop="10dp"
                    android:id="@+id/swine_sub"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/div"
                    app:spanCount="2"
                    android:layout_marginBottom="50dp"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    tools:listitem="@layout/item_farmlist" />



            </LinearLayout>

            <com.airbnb.lottie.LottieAnimationView
                tools:visibility="gone"
                android:id="@+id/loading"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_centerInParent="true"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/loading"
                app:lottie_renderMode="automatic" />


            <LinearLayout
                tools:visibility="gone"
                android:visibility="gone"
                android:layout_below="@+id/div"
                android:id="@+id/subBroilerFarm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

               <androidx.cardview.widget.CardView
                   android:foreground="?attr/selectableItemBackground"
                   android:id="@+id/broilerCompany"
                   app:cardCornerRadius="10dp"
                   app:elevation="5dp"
                   android:layout_margin="10dp"
                   android:layout_width="match_parent"
                   android:layout_height="150dp">

                   <LinearLayout
                       android:gravity="center"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:orientation="vertical">

                       <ImageView
                           android:id="@+id/icons_com"
                           android:layout_width="250dp"
                           android:layout_height="90dp"
                           android:src="@drawable/poultry_"/>

                       <TextView
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:text="Company Farm"
                           android:fontFamily="@font/archivo_semibold"
                           android:gravity="center"
                           android:textColor="@color/black"
                           android:textSize="13sp"
                           android:textStyle="bold"/>

                   </LinearLayout>

               </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:foreground="?attr/selectableItemBackground"
                    android:id="@+id/broilerInteg"
                    app:cardCornerRadius="10dp"
                    app:elevation="5dp"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="150dp">

                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/icons_integ"
                            android:layout_width="250dp"
                            android:layout_height="90dp"
                            android:src="@drawable/poultry_"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Integration Farm"
                            android:fontFamily="@font/archivo_semibold"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="13sp"
                            android:textStyle="bold"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>


        </RelativeLayout>




    </LinearLayout>


</com.razo.biosecuritychecklist.DisallowInterceptView>